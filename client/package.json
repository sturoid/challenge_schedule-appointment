{
  "name": "betterupscheduler",
  "version": "1.0.0",
  "description": "BetterUp Scheduler Client",
  "author": "Stuart Clove",
  "main": "src/index.js",
  "engines": {
    "node": ">=8.11.3"
  },
  "scripts": {
    "dev": "parcel ./src/index.html --port 4000",
    "start": "parcel ./src/index.html --port 4000",
    "start:https": "parcel ./src/index.html --https --port 4000",
    "test": "jest",
    "test:watch": "jest",
    "eslint": "eslint --fix ./src",
    "build": "parcel build ./src/index.html/",
    "packages:update": "ncu -u"
  },
  "dependencies": {
    "apollo-boost": "^0.4.4",
    "graphql": "^14.5.8",
    "normalize.css": "^8.0.1",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-apollo": "^3.1.3",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.5",
    "@babel/preset-react": "^7.7.4",
    "babel-eslint": "^10.0.3",
    "babel-plugin-import": "^1.13.0",
    "browserslist": "^4.8.2",
    "eslint": "^6.7.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-class-property": "^1.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.17.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.19.1",
    "sass": "^1.23.7"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "setupFilesAfterEnv": [
      "./config/setupTests.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index -g"
    }
  }
}
